CREATE proc [dbo].[Users_SelectAllSimple]

as
/*
	EXECUTE dbo.Users_SelectAllSimple
*/
BEGIN
		
	SELECT	[Id]
			,[FirstName]
			,[LastName]
			,[Mi]
			,[AvatarUrl]	
	FROM	[dbo].[Users] 

END
GO
